#include<stdio.h>
#include<string.h>
#include<malloc.h>
#include<stdlib.h>

struct XiaoWeiBiDe{
	int x;
	struct XiaoWeiBiDe *next;
};
struct XiaoWeiBiDe *Test_Cycle(struct XiaoWeiBiDe *head);
int Cycle_Length(struct XiaoWeiBiDe *Cycle_Node);
void list(struct XiaoWeiBiDe *head);
//***********************************************************************
int main(){
	struct XiaoWeiBiDe *Test_Cycle(struct XiaoWeiBiDe *head);
	int Cycle_Length(struct XiaoWeiBiDe *Cycle_Node);
	void list(struct XiaoWeiBiDe *head);
	
	return 0;
}
//有无环、输出起点 
struct XiaoWeiBiDe *Test_Cycle(struct XiaoWeiBiDe *head){
	int start = -1;
	struct XiaoWeiBiDe *fast = head;
	struct XiaoWeiBiDe *slow = head;
	struct XiaoWeiBiDe *ptr = head; 
	while(fast != NULL && fast->next != NULL){     
		fast = fast->next->next;
		slow = slow->next;
		if(fast == slow){
			start = 0;
			while(slow != ptr){            
				slow = slow->next;
				ptr = ptr->next;
				start++;
			}
			printf("The cycle begins at:",start);
			return ptr;
			break;
		}
	}
	printf("no cycle");
	
	return NULL;
}
//环的长度
int Cycle_Length(struct XiaoWeiBiDe *Cycle_Node){    
    int Length = 0;
    struct XiaoWeiBiDe *fast = Cycle_Node;
    struct XiaoWeiBiDe *slow = Cycle_Node;
    do{
        fast = fast->next->next;
        slow = slow->next;
        Length++;
    }while(fast != slow);
    
    return Length;
}
//遍历
void list(struct XiaoWeiBiDe *head){
	while(head != NULL){
		printf("%d",head->x);
		head = head->next;
	}
}
//小薇逼得。。。 

